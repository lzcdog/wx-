/* pages/goods_detail/index.wxss */
page{
  padding-bottom: 100rpx;
}
.swiper{
  height: 87vw;
}
.detail_price{
  margin:20rpx 0 0 20rpx;
  font-size: 45rpx;
  color: #eb4450;
}
.detail_content{
  display: flex;
  color: #6e6e6e;
  border-bottom: 15rpx solid #cecccc;
}
.detail_name{
  flex: 8;
  border-right: 1px solid #c5c5c5;
  margin: 20rpx;
}
.detail_collect{
  margin-top: 10rpx;
  flex: 1;
}
.detail_title{
  font-size: 45rpx;
  padding: 20rpx 0 20rpx 20rpx;
  color: #eb4450;
  border-bottom: 15rpx solid #cecccc;
}
.botnavbar{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  height: 100rpx;
  background-color: #ffffff;
  align-items: center;
}
.botnavbaritem{
  text-align: center;
  flex: 1;
  font-size: 20rpx;
  position: relative;
}
.botnavbaritem .itemclick{
  position: absolute;
  left: 0;
  width: 100%;
  height: 100%;
  top: 0;
  opacity: 0;
}
.addcar{
  flex: 2;
  height: 100rpx;
  background-color: rgb(255, 157, 0);
  line-height: 100rpx;
  text-align: center;
  color: #ffffff;
}
.gobuy{
  text-align: center;
  flex: 2;
  height: 100rpx;
  background-color: #eb4450;
  line-height: 100rpx;
  color: #ffffff;
}
